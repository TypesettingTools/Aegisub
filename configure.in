if test -z "$ICONV_LDFLAGS"; then
  ICONV_LDFLAGS="$LDFLAGS -liconv";
fi

if test -z "$ICONV_CFLAGS"; then
  ICONV_CFLAGS="$CPPFLAGS";
fi


if test "$enable_libass" != "no"; then
